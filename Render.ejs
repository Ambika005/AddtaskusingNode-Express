<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
    <div class="form" p-10 text-white>
        <!-- <form action="create" method="post"> -->
            <form action="/create" method="post">
            <input class="block w-2/5 px-3 py-5 bg-blue-500 rounded-md" type="text" placeholder="here goes the title!" name="title">
            <textarea  class="block w-2/5 mt-2 px-3 py-5  bg-blue-500 rounded-md resize-none" name="details" placeholder="Oh yes!And here goes the description you are looking for"></textarea>
            <input  class="w-1/5 mt-2 bg-blue-600 px-5 py-2 rounded-md mb-20" type="submit" value="Create Task">
        </form>
    </div>
    <div class="tasks flex gap-3 flex-wrap py-10">
        <% if ( files && files.length >0){ %>
            <% files.forEach(function(val){  %>
                <div class="task w-72 px-3 py-4 bg-zinc-800 rounded-md">
                    <h1 class="text-white text-3xl tracing-tighter"><%=val %></h1>
                    <div class="flex w-full justify-between items center">
                        <a class="text-blue-600 inline-block mt-3" href="/file/<%=val %>">Read more</a>
                        <a class="text-blue-300 mt-3"href="/edit/<%=val %>">Edit filename</a>
                    </div>
                  </div>
          <%  })  %>
          <% } else{    %>
            <h3 class="text-blue-300">no tasks yet</h3>  
          <% }    %>
    </div>
</div>
</body>
</html>